<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <form class="mx-auto px-3 py-3 shadow w-50" action="/user/todo" method="post">
        <input class="form-control mt-3" name="tittle" type="text" placeholder="input1">
        <input class="form-control mt-3" name="input" type="text" placeholder="input2">
        <button class="btn btn-dark" type="submit">click</button>
    </form>
    <% arr.forEach((element,index) => { %>
        <div class="mx-auto px-3 py-3 shadow w-50">
            <p><%= element.tittle %></p>
            <p><%= element.input %></p>
            
              <form action="/todo/delete/<%= element._id %>" method="post">
        <button class="btn btn-danger">delete</button>

     </form>
     <form action="/todo/edit/<%= element._id  %>" method="get">
        <button class="btn btn-primary" type="submit">edit</button>

     </form>
        </div>
     
   

    <% }) %> 
</body>
</html>